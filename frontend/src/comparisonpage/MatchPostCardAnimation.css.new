@keyframes shareToFeed {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  10% {
    transform: scale(1.05);
    box-shadow: 0 0 15px rgba(0, 123, 255, 0.6);
  }
  25% {
    transform: scale(1) translateY(5px);
    box-shadow: 0 0 20px rgba(0, 123, 255, 0.5);
  }
  40% {
    transform: scale(0.98) translateY(20px);
    opacity: 0.95;
    box-shadow: 0 0 20px rgba(0, 123, 255, 0.5);
  }
  60% {
    transform: scale(0.95) translateY(60px);
    opacity: 0.9;
    box-shadow: 0 0 15px rgba(0, 123, 255, 0.4);
  }
  80% {
    transform: scale(0.85) translateY(120px);
    opacity: 0.7;
    box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
  }
  100% {
    transform: scale(0.7) translateY(200px);
    opacity: 0;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.2);
  }
}

/* Add a subtle bounce effect when the card appears */
@keyframes cardAppear {
  0% {
    transform: scale(0.95);
    opacity: 0.8;
  }
  60% {
    transform: scale(1.02);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.match-post-card {
  animation: cardAppear 0.4s ease-out;
}

.animate-share {
  animation: shareToFeed 1.8s ease-in-out forwards;
  pointer-events: none; /* Prevent interaction during animation */
}
